own_window yes
own_window_type desktop
#own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent yes
own_window_argb_visual yes
own_window_hints below

disable_auto_reload yes
double_buffer yes
use_xft yes

border_width 1
draw_shades no
default_color black
alignment top_right
gap_x 0
gap_y 50
minimum_size 400 0
maximum_width 400

xftfont Droid Sans:size=10

#Win+f ${alignr} Firefox

TEXT
APPS
Alt+Enter ${alignr} Terminal
Alt+Space ${alignr} dmenu

WINDOW MOVEMENT
Alt+{h,l,j,k} ${alignr} Focus window {left,right,down,up}
Alt+Shift+{h,l,j,k} ${alignr} Swap window {left,right,down,up}
Alt+` ${alignr} Focus Last Window
Alt+' ${alignr} Swap focussed with last window
Alt+m ${alignr} Swap focussed with biggest window
Alt+, ${alignr} Circulate windows backwards
Alt+. ${alignr} Circulate windows forwards
Alt+Ctrl+{h,l,j,k} ${alignr} Preselect split {left,right,down,up}
Alt+Ctrl+Space ${alignr} Cancel Window Preselect
Alt+Ctrl+Shift+Space ${alignr} Cancel Desktop Preselect
Alt+Shift+{1-9} ${alignr} Move window to desktop {1-9}

WINDOW OPERATIONS
Alt+w ${alignr} Close Window
Alt+s ${alignr} Toggle Window Floating
Alt+f ${alignr} Toggle Window Fullscreen
Alt+Super+{h,l,j,k} ${alignr} Push edge 10px {left,right,down,up}
Alt+Super+Shift+{h,l,j,k} ${alignr} Pull edge 10px {left,right,down,up}
Alt+Ctrl+{1-9} ${alignr} Set split ratio {10%-90%}


DESKTOP OPERATIONS
Alt+{1-9} ${alignr} Move to desktop {1-9}
Alt+[ ${alignr} Focus previous desktop
Alt+] ${alignr} Focus next desktop
Alt+b ${alignr} Rebalance windows
Alt+t ${alignr} Next Layout
Alt+Tab ${alignr} Focus Last Desktop

BSPWM
Alt+Esc ${alignr} Reload configuration
Alt+Super+Esc ${alignr} Quit
